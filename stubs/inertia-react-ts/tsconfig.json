{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./resources/js/*"],
            "@types/*": ["./resources/js/types/*"],
            "@auth/*": ["./Modules/Auth/resources/assets/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts",
        "Modules/**/resources/assets/js/**/*.ts",
        "Modules/**/resources/assets/js/**/*.tsx",
        "Modules/**/resources/assets/js/**/*.d.ts"
    ]
}
